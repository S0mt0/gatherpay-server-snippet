{
  "name": "gatherpay",
  "version": "1.0.0",
  "description": "API server of the GatherPay project",
  "author": "Somtochukwu Nkem",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "db:dev:rm": "docker compose rm dev-db redis pgadmin -s -f -v",
    "db:dev:up": "docker compose up dev-db redis pgadmin -d",
    "db:dev:restart": "yarn db:dev:rm && yarn db:dev:up",
    "db:test:rm": "docker compose rm test-db test-redis -s -f -v",
    "db:test:up": "docker compose up test-db test-redis -d",
    "db:test:restart": "yarn db:test:rm && yarn db:test:up",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "dev": "yarn start:dev",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "dotenv -e .env.test.local jest",
    "test:watch": "dotenv -e .env.test.local jest --watch",
    "test:cov": "dotenv -e .env.test.local jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "pretest:e2e": "yarn db:test:restart",
    "test:e2e": "dotenv -e .env.test.local -- jest --watch --no-cache --config ./test/jest-e2e.json",
    "sq:init": "sequelize-cli init",
    "sq:migrate:prod": "dotenv -e .env.production -- cross-env NODE_ENV=production DEBUG=sequelize:* sequelize-cli db:migrate --debug",
    "sq:migrate:dev": "DEBUG=sequelize:* sequelize-cli db:migrate --debug",
    "sq:migrate:undo": "sequelize-cli db:migrate:undo",
    "sq:migrate:undo:all": "sequelize-cli db:migrate:undo:all",
    "sq:seed:all": "sequelize-cli db:seed:all",
    "sq:seed": "sequelize-cli db:seed --seed",
    "sq:seed:all:prod": "dotenv -e .env.production -- cross-env NODE_ENV=production DEBUG=sequelize:* sequelize-cli db:seed:all",
    "sq:seed:prod": "dotenv -e .env.production -- cross-env NODE_ENV=production DEBUG=sequelize:* sequelize-cli db:seed --seed",
    "sq:seed:undo": "sequelize-cli db:seed:undo",
    "sq:seed:undo:all": "sequelize-cli db:seed:undo:all",
    "sq:generate:migration": "sequelize-cli migration:generate --name",
    "sq:generate:seed": "sequelize-cli seed:generate --name"
  },
  "dependencies": {
    "@keyv/compress-gzip": "^2.0.2",
    "@keyv/redis": "^4.2.0",
    "@nestjs/bull": "^10.2.3",
    "@nestjs/bullmq": "^10.2.3",
    "@nestjs/cache-manager": "^2.3.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/event-emitter": "^2.1.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/platform-socket.io": "^11.1.0",
    "@nestjs/schedule": "^4.1.2",
    "@nestjs/sequelize": "^10.0.1",
    "@nestjs/swagger": "^8.1.0",
    "@nestjs/throttler": "^6.3.0",
    "@nestjs/websockets": "^11.1.0",
    "@types/multer": "^1.4.12",
    "@types/randomatic": "^3.1.5",
    "argon2": "^0.41.1",
    "bull": "^4.16.5",
    "bullmq": "^5.34.5",
    "cache-manager": "^6.3.2",
    "cacheable": "^1.8.8",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cloudinary": "^2.6.0",
    "compression": "^1.7.5",
    "cookie-parser": "^1.4.7",
    "countries-list": "^3.1.1",
    "crypto-js": "^4.2.0",
    "date-fns": "^4.1.0",
    "dotenv-flow": "^4.1.0",
    "firebase-admin": "^13.3.0",
    "google-auth-library": "^9.15.1",
    "hbs": "^4.2.0",
    "helmet": "^8.0.0",
    "libphonenumber-js": "^1.12.6",
    "lodash": "^4.17.21",
    "nodemailer": "^6.10.0",
    "passport-google-oauth": "^2.0.0",
    "qrcode": "^1.5.4",
    "randomatic": "^3.1.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "sequelize": "^6.37.5",
    "sequelize-typescript": "^2.1.6",
    "speakeasy": "^2.0.0",
    "twilio": "^5.5.1",
    "ua-parser-js": "^2.0.3",
    "useragent": "^2.3.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/cookie-parser": "^1.4.8",
    "@types/crypto-js": "^4.2.2",
    "@types/express": "^5.0.0",
    "@types/express-session": "^1.18.1",
    "@types/jest": "^29.5.2",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^20.3.1",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.11.10",
    "@types/qrcode": "^1.5.5",
    "@types/sequelize": "^4.28.20",
    "@types/speakeasy": "^2.0.10",
    "@types/supertest": "^6.0.0",
    "@types/useragent": "^2.3.4",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^8.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "pactum": "^3.7.6",
    "pg": "^8.13.1",
    "prettier": "^3.0.0",
    "sequelize-cli": "^6.6.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
